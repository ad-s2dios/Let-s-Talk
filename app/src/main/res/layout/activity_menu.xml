<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MenuActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="50sp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/grey"
        android:id="@+id/titleTV"
        android:text="@string/app_name"
        android:fontFamily="@font/lato_bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".75"
        android:orientation="horizontal"
        android:id="@+id/userLL"
        android:padding="10dp"
        android:background="@color/online">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/default_profile"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:visibility="invisible"
            android:id="@+id/profile"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:text="username"
            android:layout_weight="5"
            android:textColor="@color/white"
            android:fontFamily="@font/lato_regular"
            android:id="@+id/usernameTV"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4.25"
        android:background="@color/mint">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/menuLL">

            <Button
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:id="@+id/localButt"
                android:text="Local"
                android:layout_margin="30dp"
                android:background="@color/white"
                android:textColor="@color/navy"
                android:fontFamily="@font/lato_light"
                android:gravity="center"/>

            <Button
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:id="@+id/onlineButt"
                android:text="Online"
                android:layout_margin="30dp"
                android:background="@color/white"
                android:textColor="@color/navy"
                android:fontFamily="@font/lato_light"
                android:gravity="center"/>

            <Button
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:id="@+id/helpButt"
                android:text="Help"
                android:layout_margin="30dp"
                android:background="@color/white"
                android:textColor="@color/navy"
                android:fontFamily="@font/lato_light"
                android:gravity="center"/>

        </LinearLayout>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/feedbackButt"
            android:id="@+id/helpLV"
            android:visibility="gone"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@color/white"
            android:textColor="@color/navy"
            android:textSize="15sp"
            android:text="Email feedback"
            android:layout_margin="10dp"
            android:id="@+id/feedbackButt"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/lato_light"
            android:visibility="gone"/>

    </RelativeLayout>

</LinearLayout>